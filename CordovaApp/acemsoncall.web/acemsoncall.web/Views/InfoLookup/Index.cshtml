@using acemsoncall.web.Models.EntityModel
@model List<EMSContent>
@{
    ViewBag.Title = "Information Look Up";
}

<h2>@ViewBag.Title</h2>
<br />
<div class="inlineblock">
    <form action="?" method="get">
        <input type="text" name="s" class="form-control-sm" style="width:60%;" />
        <button class="btn btn-primary">Search</button>
    </form>
</div>
<div class="clearfix"></div>

<br />

<div>
    @foreach (var information in Model)
    {
        <div>
            <div class="title" style="font-size:24px;color:black;">
                @information.title
            </div>
            <div class="content" style="color:#808080">

                @Html.Raw(information.content)

            </div>
        </div>
        <hr size="1" style="border-style:double;border-color:black;" />
    }

</div>