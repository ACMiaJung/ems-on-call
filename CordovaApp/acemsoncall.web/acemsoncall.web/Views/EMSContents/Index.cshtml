@model IEnumerable<acemsoncall.web.Models.EntityModel.EMSContent>

@{
    ViewBag.Title = "Contents List";
}

<h2>@ViewBag.Title</h2>

<p>
    <a href="/EMSContents/create" class="btn btn-primary">Add New Content</a>
</p>
<table class="table">
    <tr>
        <th style="width:70%;">
            Title
        </th>
        <th>
            Type
        </th>
        <th>
            Last Updated
        </th>
        <th></th>
    </tr>

    @{
   
    }

@foreach (var item in Model) {
    <tr>
        <td>
            <a href="/EMSContents/Details/@item.id"><u>@item.title</u></a>
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.contenttype)
        </td>
        <td>
            @if (item.updatedt == null){
                @item.registdt.ToString("MM/dd/yy")
            }
            else{
                @item.updatedt.Value.ToString("MM/dd/yy")
            }
        </td>
        <td>
            @Html.ActionLink("🗑️", "Delete", new { id = item.id })
        </td>
    </tr>
}

</table>
